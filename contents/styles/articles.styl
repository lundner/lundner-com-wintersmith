lightgray = RGBA(240,240,240, 1.0)
dark = RGBA(43.00, 43.00, 43.00, 1.00)

header
	-webkit-animation header_slideup 1s 2s forwards


#articles
	margin 0 0 30px 35px
	ul
		width 90%
		padding 0
		-webkit-column-count 4
		-webkit-column-gap 10px
		-webkit-column-fill auto
		li
			display block
			background lightgray
			margin 0 0 10px 0
			line-height 2em
			-webkit-column-break-inside avoid
			img
				width 100%
			h1
				font-size 20px
				margin 0
				padding 10px 15px

@media (max-width: 1200px)
	#articles
		ul
			-webkit-column-count 3

@media (max-width: 1024px)
	#articles
		ul
			-webkit-column-count 3

@media (max-width: 820px)
	header
		-webkit-animation none

	#articles
		margin 0
		ul
			width 100%
			margin 0
			-webkit-column-count 2
			li
				width 100%

@media (max-width: 400px)
	#articles
		ul
			-webkit-column-count 1
