lightblue = RGBA(0, 173, 239, 1.0)
lightgray = RGBA(240,240,240, 1.0)
lightgreen = RGBA(228.00, 253.00, 218.00, 1.00)
blue = RGBA(35.00, 118.00, 198.00, 1.00)
dark = RGBA(43.00, 43.00, 43.00, 1.00)

body
	color dark
	font-family 'Helvetica', sans-serif
	font-weight lighter
	line-height 1.5em
	margin 0
	padding 0
	background-color white
	-webkit-animation fadein 2s

a
	text-decoration none
	color lightblue
	&:hover
		color blue

header
	position absolute
	right 0
	padding 10px
	margin 0 30px 0 0
	width 250px
	text-align center
	background lightblue
	color white
	letter-spacing 1px
	text-transform uppercase
	z-index 1
	border-radius 0 0 30px 2px
	h1
		margin 5px 0 10px 0
		font-size 25px
		font-weight 100
	// -webkit-animation slidedown 1s
	img
		width 25%
		margin 1% 3.5%

nav
	width 75%
	ul
		margin 0 25px 10px 25px
		padding 0
		li
			display inline-block
			margin 10px 30px 10px 0
			color lightblue
			text-transform uppercase
			font-weight 500
			letter-spacing 2px
			font-size 15px
			a 
				padding 10px
				&.active
					background lightblue
					border-radius 2px
					color white
					&:after
						content ""
						display block
						position absolute
						margin -5px 0 0 0 
						width: 0; 
						height: 0; 
						border-left: 20px solid transparent;
						border-right: 20px solid transparent;
						border-top: 20px solid lightblue
footer
	width 94%
	height 80px
	margin 25px 0
	position fixed
	bottom 0
	// span
	// 	color white
	// 	display inline-block
	// 	padding 50px 30px
	// 	font-weight lighter
	img.social
		max-width 20%
		height 100%
		float right
		opacity 0
		-webkit-transition all 0.2s linear 0.2s
	img.me
		width 100px
		margin -15px -50px 0 10px
		float right
		border 1px solid #222
		border-radius 50%
		-webkit-transition-duration 0.2s
		&:hover
			-webkit-transform scale(1.1)
	&.active
	&:hover
		img.social
			opacity 1
		background dark
	-webkit-transition all 0.2s linear

#page
	width 65%
	margin 5px 25px 125px 25px
	padding 20px
	min-height 300px
	background lightgray
	// -webkit-transition all 0.5s

#hint
	margin 10px 35px
	padding 10px
	background lightgreen
	color dark
	width 68%
	font-weight 300
	border-radius 3px

// @media (max-width: 1100px)
// 	header
// 		-webkit-animation header_slideup 1s forwards

@media (max-width: 820px)
	header
		position relative
		width auto
		margin 0
		border-radius 0
		// -webkit-animation none
	nav
		width 100%
		ul
			margin 0
			li
				margin 5px
				a.active
					&:after
						border none
	footer
		position relative
		background dark
		width 85%
		img.social
			opacity 1

	#page
		border-radius 2px
		width 90%
		margin 3%
		padding 2%

	#hint
		width 90%
		margin 3%
		padding 2%

.clear 
	clear both
	margin-bottom 125px

@-webkit-keyframes fadein 
	from
		opacity 0

@-webkit-keyframes slidedown
	from
		margin-top -600px

@-webkit-keyframes header_slideup
	from
		margin-top 0px
	to
		margin-top -80px